<?php
/**
 * Cart cross sell items template
 *
 * @see Mage_Checkout_Block_Cart_Crosssell
 */
?>
<?php
    if($this->getItemCount()):
    $_helper = $this->helper('catalog/output');
    $collection = $this->getItems();
    $_collectionSize = 3; //count($collection);
    shuffle($collection);
?>
<div class="cart box-collateral box-up-sell product">
<h2><?php echo $this->__('Based on your selection, you may be interested in the following items:') ?></h2>    
    <ul class="products-grid">
    <?php $i=0; foreach ($collection as $_product): ?>
    <?php if ($i < $_collectionSize): ?>
            <li class="item">
                <div class="product_in">
                    <div class="product_image">
                        <a href="<?php echo $_product->getProductUrl() ?>" title="<?php echo $this->stripTags($this->getImageLabel($_product, 'small_image'), null, true) ?>" class="product-image">
                            <img src="<?php echo $this->helper('catalog/image')->init($_product, 'small_image')->resize(367,300); ?>" alt="<?php echo $this->stripTags($this->getImageLabel($_product, 'small_image'), null, true) ?>" />
                        </a>
                    </div>
                    <div class="product_name">
                        <h2>
                            <a href="<?php echo $_product->getProductUrl() ?>" title="<?php echo $this->stripTags($_product->getName(), null, true) ?>"><?php echo $_helper->productAttribute($_product, $_product->getName(), 'name') ?></a>
                        </h2>
                        <?php echo $this->getPriceHtml($_product, true) ?>
                    </div>
                </div>
            </li>
    <?php $i++ ; endif; ?>
    <?php endforeach; ?>
    </ul>
</div>
<?php endif; ?>
