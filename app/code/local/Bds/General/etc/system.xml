<?xml version="1.0" encoding="UTF-8"?>
<config>
    <tabs>
        <bds translate="label" module="general">
            <label>Sharethis Extension</label>
            <sort_order>500</sort_order>
        </bds>
    </tabs>
    <sections>
        <bds translate="label" module="general">
            <label>Sharethis Setting</label>
            <tab>bds</tab>
            <sort_order>1000</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <bds_group translate="label" module="general">
                    <label>Sharethis icon display setting on product page</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1000</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <bds_googleshare translate="label">
                            <label>Enable Google Share Icon</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>                  
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </bds_googleshare>
                        <bds_facebookshare translate="label">
                            <label>Enable Faceboook Share Icon</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>                  
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </bds_facebookshare>
                        <bds_twittershare translate="label">
                            <label>Enable Twitter Share Icon</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>                  
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </bds_twittershare>
                        <bds_pinterestshare translate="label">
                            <label>Enable Pinterest Share Icon</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>                  
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </bds_pinterestshare>
                    </fields>
                </bds_group>
            </groups>
        </bds>
    </sections>
</config>